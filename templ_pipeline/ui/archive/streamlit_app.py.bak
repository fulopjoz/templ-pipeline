                                show_protein=show_protein,
                                protein_file=protein_file,
                                show_surface=show_surface,
                                pocket_chains=pocket_chains,
                                highlight_mcs=highlight_mcs and mcs_indices_to_show is not None,
                                mcs_indices=mcs_indices_to_show
